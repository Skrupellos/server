#!/bin/bash

set -e

declare -A outlets=(
	["printer"]="gpio97"
	["leds"]="gpio98"
	["desk"]="gpio99"
	["beamer"]="gpio100"
)


printUsage() {
	echo "wee"
	exit 1
}


isOn() {
	if [ $# -ne 1 -o -z "${outlets[$1]}" ] ; then
		echo "Unknown outlet" >&2
		exit 1
	fi
	
	[ $(</sys/devices/platform/soc@01c00000/1c20800.pinctrl/gpio/${outlets["$1"]}/value) -ne 0 ]
}


list() {
	for outlet in ${!outlets[@]} ; do
		show "$outlet"
	done
}


show() {
	if isOn "$1" ; then
		state=2
	else
		state=1
	fi
	
	echo -e " \033[3${state}mâ—\033[0m $1 (${outlets["$1"]})"
}


switch() {
	if isOn "$1" ; then
		new=false
	else
		new=true
	fi
	
	case "$2" in
		"on")
			new=true
		;;
		"off")
			new=false
		;;
		"toggle")
		;;
		*)
			printUsage
		;;
	esac
	
	if $new ; then
		echo "1" >/sys/devices/platform/soc@01c00000/1c20800.pinctrl/gpio/${outlets["$1"]}/value
	else
		echo "0" >/sys/devices/platform/soc@01c00000/1c20800.pinctrl/gpio/${outlets["$1"]}/value
	fi
}


case $# in
	0)
		list
	;;
	1)
		show "$1"
	;;
	2)
		switch "$1" "$2"
	;;
	*)
		printUsage
	;;
esac

